<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#c1dcf7"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#c1dcf7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvselamatdatang"
            android:layout_below="@+id/imgLogo"
            android:gravity="center"
            android:text="Selamat Datang di Smart-App"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/username"
                android:hint="Email or Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />

        <Button
            android:layout_below="@+id/asetPassword"
            android:id="@+id/btnmasuk"
            android:text="login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/btnmasuk"
            android:id="@+id/tvForgot"
            android:textStyle="bold"
            android:textColor="#2983dc"
            android:gravity="center"
            android:text="Forgot Password ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_below="@+id/tvForgot"
            android:id="@+id/createUser"
            android:textColor="#f6f6f7"
            android:layout_marginTop="60dp"
            android:background="#4df563"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text=" Create a new Account "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>